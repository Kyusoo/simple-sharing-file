{
    "name": "simple-sharing-file",
    "version": "1.0.0",
    "description": "Simple Sharing File",
    "main": "dist/main.js",
    "scripts": {
        "start": "node start",
        "start:pro": "cross-env NODE_ENV=production node start",
        "clean": "rimraf build dist",
        "webpack": "cross-env NODE_ENV=development npx webpack",
        "webpack:product": "cross-env NODE_ENV=production npx webpack",
        "build": "npm run clean && npm run webpack:product && electron-builder build"
    },
    "keywords": [
        "Simple",
        "Sharing",
        "File"
    ],
    "author": "Welshtokki",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.4",
        "@babel/preset-react": "^7.16.0",
        "babel-loader": "^8.2.3",
        "chalk": "^4.1.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^9.1.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.5.1",
        "electron": "^16.0.4",
        "electron-builder": "^22.14.5",
        "nodemon": "^2.0.15",
        "style-loader": "^3.3.1",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "@emotion/react": "^11.7.1",
        "@emotion/styled": "^11.6.0",
        "@mui/icons-material": "^5.2.4",
        "@mui/material": "^5.2.3",
        "@mui/styles": "^5.3.0",
        "chokidar": "^3.5.2",
        "ejs": "^3.1.6",
        "express": "^4.17.2",
        "multer": "^1.4.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "serve-favicon": "^2.5.0",
        "socket.io": "^4.4.0"
    },
    "build": {
        "asar": true,
        "appId": "example.react.electron",
        "productName": "Simple-Sharing-File",
        "files": [
            "assets/*",
            "dist/*"
        ],
        "mac": {
            "target": [
                "default"
            ],
            "icon": "assets/icon.icns"
        },
        "dmg": {
            "title": "Simple-Sharing-File",
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "publish": [
                {
                    "provider": "generic",
                    "url": "https://github.com/Kyusoo/simple-sharing-file"
                }
            ],
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "installerIcon": "assets/icon.ico",
            "installerHeaderIcon": "assets/icon.ico"
        },
        "directories": {
            "output": "./build/"
        }
    }
}
